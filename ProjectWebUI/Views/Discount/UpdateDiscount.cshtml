@model UpdateDiscountVM
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İndirim Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="DiscountId" />
                            <input type="hidden" asp-for="CreatedDate" />
                            <div class="form-group">
                                <label for="Title">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="ImageURL">ImageURL</label>
                                <input type="text" class="form-control" asp-for="ImageURL" id="ImageURL">
                            </div>
                            <div class="form-group">
                                <label for="DiscountAmount">İndirim Miktarı</label>
                                <input type="number" class="form-control" asp-for="DiscountAmount" id="DiscountAmount">
                            </div>
                            <div class="form-group">
                                <label for="Description">Detay</label>
                                <textarea rows="3" class="form-control" asp-for="Description" id="Description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">İndirim Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

