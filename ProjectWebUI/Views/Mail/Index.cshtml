@model CreateMailVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mail Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mail Gönderme Paneli</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="receiverMail">Alıcı Mail : </label>
                                <input type="email" class="form-control" asp-for="ReceiverMail" id="receiverMail">
                            </div>
                            <div class="form-group">
                                <label for="subject">Konu : </label>
                                <input type="text" class="form-control" asp-for="Subject" id="subject">
                            </div>
                            <div class="form-group">
                                <label for="body">Mesajınız : </label>
                                <textarea rows="3" class="form-control" asp-for="Body" id="body"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Mail Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>