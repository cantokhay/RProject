@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadPartialComponent")

<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarPartialComponent")

    <section class="food_section layout_padding">
        <div class="container">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12">
                        <h3 class="text-center mb-4">Dükkan Anlık Mesajlaşma</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">Kullanıcı Adınız : </div>
                    <div class="col-5">
                        <input class="form-control" type="text" id="userInput" />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-2">Mesajınız : </div>
                    <div class="col-5">
                        <input class="form-control" type="text" id="messageInput" />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-2"></div>
                    <div class="col-3">
                        <input type"button" class="btn btn-warning" value="Mesaj Gönder" id="sendButton" />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-12">
                        <hr />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-12">
                        <ul id="messageList" class="list-group">
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("_UILayoutFooterPartialComponent")
    @await Component.InvokeAsync("_UILayoutScriptPartialComponent")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>

</body>

</html>