@model CreateFeatureVM
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkanlar İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Öne Çıkanlar Ekle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="FeatureTitle1">Başlık 1</label>
                                <input type="text" class="form-control" asp-for="FeatureTitle1" id="FeatureTitle1">
                            </div>
                            <div class="form-group">
                                <label for="FeatureTitle2">Başlık 2</label>
                                <input type="text" class="form-control" asp-for="FeatureTitle2" id="FeatureTitle2">
                            </div>
                            <div class="form-group">
                                <label for="FeatureTitle3">Başlık 3</label>
                                <input type="text" class="form-control" asp-for="FeatureTitle3" id="FeatureTitle3">
                            </div>
                            <div class="form-group">
                                <label for="FeatureDescription1">Detay 1</label>
                                <textarea rows="2" class="form-control" asp-for="FeatureDescription1" id="FeatureDescription1"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="FeatureDescription2">Detay 2</label>
                                <textarea rows="2" class="form-control" asp-for="FeatureDescription2" id="FeatureDescription2"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="FeatureDescription3">Detay 3</label>
                                <textarea rows="2" class="form-control" asp-for="FeatureDescription3" id="FeatureDescription3"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Öne Çıkan Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

