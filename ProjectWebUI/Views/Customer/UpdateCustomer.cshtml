@model UpdateCustomerVM
@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Müşteri Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="CustomerId" />
                            <div class="form-group">
                                <label for="customerName">Müşteri Adı</label>
                                <input type="text" class="form-control" asp-for="CustomerName" id="customerName">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Müşteri Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

