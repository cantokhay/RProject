@model UpdateContactVM
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgisi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Bilgisi Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="ContactId" />
                            <input type="hidden" asp-for="CreatedDate" />
                            <div class="form-group">
                                <label for="ContactLocation">Konum</label>
                                <input type="text" class="form-control" asp-for="ContactLocation" id="ContactLocation">
                            </div>
                            <div class="form-group">
                                <label for="ContactPhone">Telefon Numarası</label>
                                <input type="text" class="form-control" asp-for="ContactPhone" id="ContactPhone">
                            </div>
                            <div class="form-group">
                                <label for="ContactEmail">Email Adresi</label>
                                <input type="email" class="form-control" asp-for="ContactEmail" id="ContactEmail">
                            </div>
                            <div class="form-group">
                                <label for="FooterDescription">Açıklama</label>
                                <textarea rows="3" class="form-control" asp-for="FooterDescription" id="FooterDescription"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="FooterTitle">Başlık</label>
                                <input type="text" class="form-control" asp-for="FooterTitle" id="FooterTitle">
                            </div>
                            <div class="form-group">
                                <label for="OpenDays">Açık Günler</label>
                                <input type="text" class="form-control" asp-for="OpenDays" id="OpenDays">
                            </div>
                            <div class="form-group">
                                <label for="OpenDaysDescription">Açık Günler Açıklaması</label>
                                <input type="text" class="form-control" asp-for="OpenDaysDescription" id="OpenDaysDescription">
                            </div>
                            <div class="form-group">
                                <label for="OpenHours">Açık Saatler</label>
                                <input type="text" class="form-control" asp-for="OpenHours" id="OpenHours">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">İletişim Bilgisi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

