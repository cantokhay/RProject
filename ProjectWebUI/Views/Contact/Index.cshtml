@model List<ResultContactVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgisi işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Bilgisi Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim Bilgisi ile ilgili işlemi buradan yapabilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Konum</th>
									<th scope="col">Telefon Numarası</th>
									<th scope="col">Email Adresi</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açık Günler</th>
									<th scope="col">Açık Günler Açıklaması</th>
									<th scope="col">Açık Saatler</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactLocation</td>
										<td>@item.ContactPhone</td>
										<td>@item.ContactEmail</td>
										<td>@item.FooterDescription</td>
										<td>@item.FooterTitle</td>
										<td>@item.OpenDays</td>
										<td>@item.OpenDaysDescription</td>
										<td>@item.OpenHours</td>
										<td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger btn-border btn-round">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-secondary btn-border btn-round">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-outline-primary">Yeni İletişim Bilgisi Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


