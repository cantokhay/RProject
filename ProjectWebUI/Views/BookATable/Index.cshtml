@model CreateBookingVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadPartialComponent")

<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarPartialComponent")

    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Rezervasyon Oluştur
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form method="post">
                            <div>
                                <span asp-validation-for="BookingName" class="text-danger"></span>
                                <input type="text" class="form-control" placeholder="Adın Soyadın" asp-for="BookingName" />
                            </div>
                            <div>
                                <span asp-validation-for="BookingPhone" class="text-danger"></span>
                                <input type="text" class="form-control" placeholder="Telefon Numaran" asp-for="BookingPhone" />
                            </div>
                            <div>
                                <span asp-validation-for="BookingEmail" class="text-danger"></span>
                                <input type="email" class="form-control" placeholder="Mail Adresin" asp-for="BookingEmail" />
                            </div>
                            <div>
                                <span asp-validation-for="PersonCount" class="text-danger"></span>
                                <select asp-for="PersonCount" class="form-control nice-select wide">
                                    <option value="" disabled selected>
                                        Kaç Kişilik?
                                    </option>
                                    <option value="1">
                                        1
                                    </option>
                                    <option value="2">
                                        2
                                    </option>
                                    <option value="3">
                                        3
                                    </option>
                                    <option value="4">
                                        4
                                    </option>
                                    <option value="5">
                                        5
                                    </option>
                                    <option value="6">
                                        6
                                    </option>
                                    <option value="7">
                                        7
                                    </option>
                                    <option value="8">
                                        8
                                    </option>
                                    <option value="9">
                                        9++
                                    </option>
                                </select>
                            </div>
                            <div>
                                <span asp-validation-for="BookingDate" class="text-danger"></span>
                                <input type="date" class="form-control" asp-for="BookingDate">
                            </div>
                            <div class="btn_box">
                                <button>
                                    Yerini Ayır
                                </button>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container ">
                        <iframe src="@ViewBag.Location" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("_UILayoutFooterPartialComponent")
    @await Component.InvokeAsync("_UILayoutScriptPartialComponent")

</body>
</html>