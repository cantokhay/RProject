@model List<ResultSliderVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkanlar işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkanlar Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Öne Çıkanlar ilgili işlemi buradan yapabilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık1</th>
									<th scope="col">Başlık2</th>
									<th scope="col">Başlık3</th>
									<th scope="col">Detay1</th>
									<th scope="col">Detay2</th>
									<th scope="col">Detay3</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SliderTitle1</td>
										<td>@item.SliderTitle2</td>
										<td>@item.SliderTitle3</td>
										<td>@item.SliderDescription1</td>
										<td>@item.SliderDescription2</td>
										<td>@item.SliderDescription3</td>
										<td><a href="/Slider/DeleteSlider/@item.SliderId" class="btn btn-outline-danger btn-border btn-round">Sil</a></td>
										<td><a href="/Slider/UpdateSlider/@item.SliderId" class="btn btn-outline-secondary btn-border btn-round">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Slider/CreateSlider/" class="btn btn-outline-primary">Yeni Öne Çıkan Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

