@model List<ResultTestimonialVM>
<section class="client_section layout_padding-bottom">
    <div class="container">
        <div class="heading_container heading_center psudo_white_primary mb_45">
            <h2>
                Müşteri Yorumları
            </h2>
        </div>
        <div class="carousel-wrap row ">
            <div class="owl-carousel client_owl-carousel">
                @{
                    var i = 8;
                    var takenItems = Model.Take(8).ToList();
                }
                @foreach (var item in takenItems)
                {
                <div class="item">
                    <div class="box">
                        <div class="detail-box">
                            <p>
                                @item.Comment
                            </p>
                            <h6>
                                @item.TestimonialName
                            </h6>
                            <p>
                                @item.TestimonialTitle
                            </p>
                        </div>
                        <div class="img-box">
                            <img src="@item.TestimonialImageURL" alt="" class="box-img">
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</section>