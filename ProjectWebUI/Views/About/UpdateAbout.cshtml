@model UpdateAboutVM
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkında İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkında Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="AboutId" />
                            <input type="hidden" asp-for="CreatedDate" />
                            <div class="form-group">
                                <label for="aboutTitle">Hakkında Başlığı</label>
                                <input type="text" class="form-control" asp-for="AboutTitle" id="aboutTitle">
                            </div>
                            <div class="form-group">
                                <label for="aboutDescription">Hakkında Detayı</label>
                                <textarea rows="5" class="form-control" asp-for="AboutDescription" id="aboutDescription"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="aboutImageURL">Hakkında Resmi</label>
                                <input type="text" class="form-control" asp-for="AboutImageURL" id="aboutImageURL">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Hakkında Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

