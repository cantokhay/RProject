@model List<ResultAboutVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkında işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkında Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkında ile ilgili işlemi buradan yapabilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Hakkında Başlığı</th>
									<th scope="col">Detay</th>
									<th scope="col">Resim Linki</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.AboutId</td>
										<td>@item.AboutTitle</td>
										<td>@item.AboutDescription</td>
										<td>@item.AboutImageURL</td>
										<td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger btn-border btn-round">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-secondary btn-border btn-round">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/About/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkında Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

