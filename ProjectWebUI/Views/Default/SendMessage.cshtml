@model CreateMessageVM
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Bize Mesaj Gönderin
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post" asp-action="SendMessage" asp-controller="Default">
                        <div>
                            <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="MessageFullName" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Telefon Numaranız" asp-for="MessagePhone" />
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="Email Adresiniz" asp-for="MessageEmail" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Konu" asp-for="MessageSubject" />
                        </div>
                        <div>
                            <textarea asp-for="MessageContent" rows="1" class="form-control" placeholder="Mesajınız"></textarea>
                        </div>
                        <div class="btn_box">
                            <button>
                                Mesajınızı Gönderin
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <iframe src="@ViewBag.Location" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

