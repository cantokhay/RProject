@model List<ResultProductVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int i = 1;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Ürün Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ürünlerle ilgili işlemi buradan yapabilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün Adı</th>
									<th scope="col">Detay</th>
									<th scope="col">Fiyatı</th>
									<th scope="col">Kategori</th>
									@* <th scope="col">Durum</th> *@
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@i</td>
										<td>@item.ProductName</td>
										<td>@item.ProductDescription</td>
										<td>@item.ProductPrice</td>
										<td>@item.CategoryName</td>
										@* <td>@item.ProductStatus</td> *@
										<td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger btn-border btn-round">Sil</a></td>
										<td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-secondary btn-border btn-round">Güncelle</a></td>
									</tr>
									i++;
								}
							</tbody>
						</table>
						<a href="/Product/CreateProduct/" class="btn btn-outline-primary">Yeni Ürün Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

