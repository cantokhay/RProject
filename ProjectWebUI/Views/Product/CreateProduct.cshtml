@model CreateProductVM
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Ürün Ekle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="productName">Ürün Adı</label>
                                <input type="text" class="form-control" asp-for="ProductName" id="productName">
                            </div>
                            <div class="form-group">
                                <label for="productPrice">Ürün Fiyatı</label>
                                <input type="text" class="form-control" asp-for="ProductPrice" id="productPrice">
                            </div>
                            <div class="form-group">
                                <label for="productImageURL">Ürün Görseli</label>
                                <input type="text" class="form-control" asp-for="ProductImageURL" id="productImageURL">
                            </div>
                            <div class="form-group">
                                <label for="productImageURL">Ürün Kategorisini Seçiniz</label>
                                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.CategoryList, new{@class="form-control"})
                            </div>
                            <div class="form-group">
                                <label for="productDescription">Ürün Detayları</label>
                                <input type="text" class="form-control" asp-for="ProductDescription" id="productDescription">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Ürün Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>