@model AppUserEditVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil Ayarları</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bilgileri Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="firstName">Ad : </label>
                                <input type="text" class="form-control" asp-for="FirstName" id="firstName">
                            </div>
                            <div class="form-group">
                                <label for="lastName">Soyad : </label>
                                <input type="text" class="form-control" asp-for="LastName" id="lastName">
                            </div>
                            <div class="form-group">
                                <label for="email">Email : </label>
                                <input type="email" class="form-control" asp-for="Email" id="email">
                            </div>
                            <div class="form-group">
                                <label for="userName">Kullanıcı Adı : </label>
                                <input type="text" class="form-control" asp-for="UserName" id="userName">
                            </div>
                            <div class="form-group">
                                <label for="password">Şifre : </label>
                                <input type="password" class="form-control" asp-for="Password" id="password">
                            </div>
                            <div class="form-group">
                                <label for="confirmPassword">Şifre Tekrarı : </label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" id="confirmPassword">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
