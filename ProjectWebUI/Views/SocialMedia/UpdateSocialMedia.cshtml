@model UpdateSocialMediaVM
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="SocialMediaId"/>
                    <input type="hidden" asp-for="CreatedDate"/>
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sosyal Medya Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="SocialMediaTitle">Sosyal Medya Ağı</label>
                                <input type="text" class="form-control" asp-for="SocialMediaTitle" id="SocialMediaTitle">
                            </div>
                            <div class="form-group">
                                <label for="SocialMediaURL">Link</label>
                                <input type="text" class="form-control" asp-for="SocialMediaURL" id="SocialMediaURL">
                            </div>
                            <div class="form-group">
                                <label for="SocialMediaIcon">İkon</label>
                                <input type="text" class="form-control" asp-for="SocialMediaIcon" id="SocialMediaIcon" />
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Sosyal Medya Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

