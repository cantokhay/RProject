@model List<ResultSocialMediaVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int i = 1;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Sosyal Medya ile ilgili işlemi buradan yapabilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Sosyal Medya Ağı</th>
									<th scope="col">Link</th>
									<th scope="col">Görsel</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@i</td>
										<td>@item.SocialMediaTitle</td>
										<td>@item.SocialMediaURL</td>
										<td>@item.SocialMediaIcon</td>
										<td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger btn-border btn-round">Sil</a></td>
										<td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-secondary btn-border btn-round">Güncelle</a></td>
									</tr>
									i++;
								}
							</tbody>
						</table>
						<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-outline-primary">Yeni Sosyal Medya Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>