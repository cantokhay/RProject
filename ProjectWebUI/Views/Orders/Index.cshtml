@model List<ResultOrderVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int i= 1;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sipariş işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sipariş Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Siparişlerle ilgili işlemi buradan yapabilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Müşteri Adı</th>
									<th scope="col">Sipariş Durumu</th>
									<th scope="col">Sipariş Zamanı</th>
									<th scope="col">Sipariş Toplam Tutarı</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Alındı İşaretle</th>
									<th scope="col">Ödendi İşaretle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									var statusToShow = item.OrderDescription == Project.Data.Enums.OrderDescription.OrderTaken ? "Sipariş Alındı" : "Hesap Ödendi";
									<tr>
										<td>@i</td>
										<td>@item.CustomerName</td>
										<td>@statusToShow</td>
										<td>@item.OrderDate</td>
										<td>@item.TotalPrice</td>
										<td><a href="/Orders/DeleteOrder/@item.OrderId" class="btn btn-outline-danger btn-border btn-round">Sil</a></td>
										<td><a href="/Orders/UpdateOrder/@item.OrderId" class="btn btn-outline-secondary btn-border btn-round">Güncelle</a></td>
										<td><a href="/Orders/OrderTaken/@item.OrderId" class="btn btn-outline-warning btn-border btn-round">Alındı</a></td>
										<td><a href="/Orders/OrderPaid/@item.OrderId" class="btn btn-outline-info btn-border btn-round">Ödendi</a></td>
									</tr>
									i++;
								}
							</tbody>
						</table>
						<a href="/Orders/CreateOrder/" class="btn btn-outline-primary">Yeni Sipariş Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

